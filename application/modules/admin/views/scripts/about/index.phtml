<script>
    $(function () {
        var $alert = $('.alert').hide();
        var $formAbout = $('#form-about');
        var url = $formAbout.attr('action');

        $formAbout.submit(function (e) {
            e.preventDefault();
            $.post(url, $formAbout.serializeArray(), function () {
                $alert
                    .fadeIn()
                    .delay(3000)
                    .fadeOut();
            });
        });
    });
</script>

<form id="form-about" class="form-horizontal" method="post" action="/admin/about/save" enctype="multipart/form-data">
