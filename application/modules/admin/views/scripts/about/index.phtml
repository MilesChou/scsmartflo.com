        <div class="col-sm-4">
            <input type="text" id="title" class="form-control" name="title" value="<?php echo $this->title ?>"/>
        </div>
    </div>
    <div class="form-group">
        <label for="title" class="control-label col-sm-2">Description</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="6" name="description"><?php echo $this->description ?></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
